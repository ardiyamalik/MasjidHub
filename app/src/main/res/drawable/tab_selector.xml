<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when tab is selected -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/blue" /> <!-- Warna latar belakang ketika dipilih -->
            <corners android:radius="16dp" /> <!-- Sudut bulat -->
        </shape>
    </item>

    <!-- State when tab is not selected -->
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Warna latar belakang ketika tidak dipilih -->
            <stroke android:width="2dp" android:color="@color/blue" /> <!-- Garis luar (stroke) -->
            <corners android:radius="16dp" /> <!-- Sudut bulat -->
        </shape>
    </item>
</selector>
