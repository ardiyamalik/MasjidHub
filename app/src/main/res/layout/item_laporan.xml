<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewTanggalLaporan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tanggal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewJumlahInfaq"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Infaq: Rp. 0"
        app:layout_constraintTop_toBottomOf="@id/textViewTanggalLaporan"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewJumlahKas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Kas: Rp. 0"
        app:layout_constraintTop_toBottomOf="@id/textViewJumlahInfaq"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewJumlahPengeluaran"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pengeluaran: Rp. 0"
        app:layout_constraintTop_toBottomOf="@id/textViewJumlahKas"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
