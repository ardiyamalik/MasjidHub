<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16dp">

        <!-- Existing layout elements go here -->

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@null"
            android:padding="12dp"
            android:src="@drawable/baseline_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/reqDana"
            android:layout_width="233dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="Permohonan Dana"
            android:textColor="@color/blue"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/subHeadDesk"
            android:layout_width="165dp"
            android:layout_height="25dp"
            android:layout_marginTop="44dp"
            android:fontFamily="@font/poppins_light"
            android:text="Nama Pemohon"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.065"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reqDana" />

        <ImageView
            android:id="@+id/namaInputLayout"
            android:layout_width="360dp"
            android:layout_height="41dp"
            android:layout_marginTop="148dp"
            android:background="@drawable/stroke_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.581"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="165dp"
            android:layout_height="25dp"
            android:layout_marginBottom="476dp"
            android:fontFamily="@font/poppins_light"
            android:text="Masjid"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.065"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/masjidInput"
            android:layout_width="360dp"
            android:layout_height="41dp"
            android:layout_marginBottom="428dp"
            android:background="@drawable/stroke_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.45"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="165dp"
            android:layout_height="25dp"
            android:layout_marginBottom="392dp"
            android:fontFamily="@font/poppins_light"
            android:text="Perihal Permohonan"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.065"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/perihal"
            android:layout_width="360dp"
            android:layout_height="120dp"
            android:layout_marginBottom="264dp"
            android:background="@drawable/stroke_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.529"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="165dp"
            android:layout_height="25dp"
            android:layout_marginBottom="232dp"
            android:fontFamily="@font/poppins_light"
            android:text="Jumlah"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.065"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/banyakJumlah"
            android:layout_width="360dp"
            android:layout_height="41dp"
            android:layout_marginBottom="184dp"
            android:background="@drawable/stroke_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.588"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="165dp"
            android:layout_height="25dp"
            android:layout_marginBottom="148dp"
            android:fontFamily="@font/poppins_light"
            android:text="No. Whatsapp"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.065"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/kontakInput"
            android:layout_width="360dp"
            android:layout_height="41dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/stroke_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>